<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  	android:background="#ffffffff"
  	android:id="@+id/rlCentro">


<RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#ff99ccff"
	        android:layout_alignParentTop="true"
	        android:id="@+id/norteAdivina" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android">
			<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
			>

			<TableLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<ImageView
				android:id="@+id/ivInicioAdivina"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/anterior48x48" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="          " />
			<ImageView
				android:id="@+id/ivMenuAdivina"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/menu48x48"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="          " />
			<ImageView
				android:id="@+id/ivRecargaAdivina"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/menu48x48"/>				

			</TableRow>
			</TableLayout>
		</LinearLayout>
		</LinearLayout>

	
</RelativeLayout>	

	  <TextView 
	  android:id="@+id/tvMensajeAdivina" 
	  android:text="¿Qué animal hace el ruido?"
	  android:layout_centerHorizontal="true"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:textSize="18dp"
	  android:textStyle="bold"
	  android:textColor="#000000"
	  android:layout_below="@id/norteAdivina"
	  />
	<ImageView android:layout_height="48px" 
	android:src="@drawable/consonido48x48" 
	android:id="@+id/ivSonidoAdivina" 
	android:layout_width="48px" 
	android:layout_below="@id/tvMensajeAdivina" 
    android:layout_centerHorizontal="true"
 />
		
<RelativeLayout 
android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/ivSonidoAdivina"

	        >
	        

  <TextView 
  android:id="@+id/tvFilaBlanca2"
  android:text=" "
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  />

<!-- Poner layout y los animales -->
       <GridView 
	      android:id="@+id/gridViewAdivina" android:layout_width="fill_parent"
	      android:layout_height="fill_parent" android:numColumns="auto_fit"
	      android:verticalSpacing="10dp" android:horizontalSpacing="10dp"
	      android:columnWidth="100dp" android:stretchMode="columnWidth"
	      android:background="#ffffff" />
	
</RelativeLayout>	
	 
    
</RelativeLayout>