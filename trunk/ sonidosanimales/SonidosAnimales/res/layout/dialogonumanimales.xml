<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ImageView 
	android:layout_height="wrap_content" 
	android:src="@drawable/capturanum48x48" 
	android:layout_width="wrap_content" 
	android:id="@+id/ivLayoutNumAnimal" 
	android:layout_alignParentTop="true" 
	android:layout_centerHorizontal="true"></ImageView>
	<TextView 
	android:id="@+id/tvTituloNumAnimal" 
	android:textColor="#FFFFFF" 
	android:layout_width="wrap_content" 
	android:text="Captura el número de animales a adivinar" 
	android:layout_height="wrap_content" 
	android:layout_below="@id/ivLayoutNumAnimal" 
	android:layout_centerHorizontal="true"></TextView>
	<TextView 
	android:id="@+id/tvNumMaxAnimales" 
	android:layout_width="wrap_content" 
	android:text="Mínimo 2, máximo " 
	android:layout_height="wrap_content" 
	android:textColor="#FFFFFF"
	android:layout_below="@+id/tvTituloNumAnimal" 
	android:layout_centerHorizontal="true"></TextView>
	<EditText 
	android:textSize="18sp" 
	android:layout_width="150px" 
	android:id="@+id/etNumAnimales" 
	android:layout_height="wrap_content" 
	android:layout_below="@+id/tvNumMaxAnimales" 
	android:layout_centerHorizontal="true" 
	android:layout_marginTop="16dp">
    <requestFocus></requestFocus>
</EditText>
	<Button 
	android:id="@+id/btnAceptaNumAnimales"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="Aceptar"
	android:layout_below="@id/etNumAnimales"
	android:layout_centerHorizontal="true"
	/>



</RelativeLayout>
