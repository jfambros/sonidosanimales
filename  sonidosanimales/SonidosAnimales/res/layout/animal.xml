<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  	android:background="#ffffffff"
  	android:id="@+id/rlCentro">


<RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#ff99ccff"
	        android:layout_alignParentTop="true"
	        android:id="@+id/norte" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android">
			<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
			>

			<TableLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
			<ImageView
				android:id="@+id/ivAnterior"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ante48x48" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="          " />
			<ImageView
				android:id="@+id/ivMenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/configura48x48"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="          " />
			<ImageView
				android:id="@+id/ivSiguiente"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/sigui48x48" />
			</TableRow>
			</TableLayout>
		</LinearLayout>
		</LinearLayout>

	
</RelativeLayout>	

  <TextView 
  android:id="@+id/tvNombreAnimal" 
  android:text="Hola"
  android:layout_centerHorizontal="true"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:textSize="24dp"
  android:textStyle="bold"
  android:textColor="#000000"
  android:layout_below="@id/norte"
  />

<RelativeLayout 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvNombreAnimal"
    android:layout_above="@+id/sur"
    android:layout_centerInParent="true">
	        

		  <TextView 
		  android:id="@+id/tvFilaBlanca"
		  android:text=" "
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_below="@id/tvNombreAnimal"
		  />
		  <FrameLayout 
		  android:id="@+id/frameFondoPrincipal"
		  android:layout_width="fill_parent"
		  android:layout_height="fill_parent"
		  android:background="@drawable/paisaje1magua">
			<RelativeLayout
			android:layout_width="fill_parent"
			android:orientation="vertical" android:layout_height="match_parent">

			<ViewFlipper
			    android:id="@+id/viewflipper"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_centerVertical="true" >

			    <ImageView
			        android:id="@+id/ivImagenAnimal"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:scaleType="fitXY"
			        android:src="@drawable/abeja" />
			</ViewFlipper>

			   </RelativeLayout>
		    </FrameLayout>
</RelativeLayout>	 
	
	<RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="#ff99ccff"
	         android:id="@+id/sur">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			xmlns:android="http://schemas.android.com/apk/res/android">
			<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_gravity="center_horizontal"
			>
				<TableLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TableRow
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">					
							<ImageView android:id="@+id/ivAleatorio" 
							android:src="@drawable/aaleatorio48x48"
							android:layout_gravity="center_horizontal"/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="          " />
							<ImageView android:id="@+id/ivAdivinar" 
							android:src="@drawable/adivinar48x48"/>
							<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="          " />						
							<ImageView android:id="@+id/ivGuardarSonido" 
							android:src="@drawable/salvar48x48"/>
															
					</TableRow>
				</TableLayout>			
			</LinearLayout>
		</LinearLayout>

</RelativeLayout> 
	 
    
</RelativeLayout>

