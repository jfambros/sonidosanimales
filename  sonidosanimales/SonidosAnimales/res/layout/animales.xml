<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#ffffffff"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_gravity="center_horizontal">
<TableLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical">
<TableRow
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
<ImageView
	android:id="@+id/ivAnterior"
	android:layout_width="48px"
	android:layout_height="48px"
	android:src="@drawable/anterior48x48" />
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="          " />
<ImageView
	android:id="@+id/ivMenu"
	android:layout_width="48px"
	android:layout_height="48px" 
	android:src="@drawable/menu48x48"/>
<TextView
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="          " />
<ImageView
	android:id="@+id/tvSiguiente"
	android:layout_width="48px"
	android:layout_height="48px"
	android:src="@drawable/siguiente48x48" />
</TableRow>
</TableLayout>
</LinearLayout>
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"/>
<TextView
	android:id="@+id/tvNombre"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="nombreAnimal"
	android:textSize="18sp"
	android:textColor="#ff000000"
	android:layout_gravity="center_horizontal" />
<TextView
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"/>
<ImageView
	android:id="@+id/ivImagenAnimal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal" />
</LinearLayout>

